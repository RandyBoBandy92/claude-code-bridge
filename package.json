{
	"name": "claude-code-bridge",
	"version": "1.1.0",
	"description": "Bridge between Obsidian and Claude Code for seamless file/selection tagging via WebSocket MCP server",
	"type": "module",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"lint": "eslint main.ts src/",
		"lint:fix": "eslint main.ts src/ --fix",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"release": "node release.mjs"
	},
	"keywords": [
		"obsidian",
		"claude-code",
		"mcp",
		"websocket",
		"bridge"
	],
	"author": "Randy",
	"license": "MIT",
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.39.1",
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "^8.46.4",
		"@typescript-eslint/parser": "^8.46.4",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"eslint": "^9.17.0",
		"eslint-plugin-obsidianmd": "^0.1.8",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.46.4"
	}
}